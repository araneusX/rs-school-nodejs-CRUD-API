{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": true },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["*.js"],
  "root": true,
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}