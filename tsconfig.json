{
  "compilerOptions": {
    "target": "es6",                          
    "module": "NodeNext",                    
    "lib": ["es6"],                     
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "../index.ts"]
}